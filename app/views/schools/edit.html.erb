<%= form_with url: "/schools/#{@school.id}", method: "patch", local: true do |form|%>
  <br>
  <%= form.label :name, "School name:" %>
  <%= form.text_field :name, value: @school.name %>
  <br>
  <br>
  <%= form.label :open_year, "Year it opened:" %>
  <%= form.number_field :open_year, within: 1000...9999, value: @school.open_year %>
  <br>
  <br>
  <%= form.label :fully_staffed, "Are they fully staffed?" %>
  <%= form.radio_button :fully_staffed, "true", checked: @school.fully_staffed %>
  <%= form.label :fully_staffed_true, "True" %>
  <%= form.radio_button :fully_staffed, "false", checked: !@school.fully_staffed %> 
  <%= form.label :fully_staffed_false, "False" %>
  <br>
  <br>
  <%= form.submit "Update" %>
<% end %>