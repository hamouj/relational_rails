<h1>All Schools</h1>

<% @schools.each do |school| %>
  <h2><a href="/schools/<%= school.id%>"><%= school.name%></a></h3>
  <p>Created at: <%= school.created_at %></p>
  <h3><a href="/schools/<%= school.id %>/edit">Update <%= school.name %></a></h3>
  <h3><%= link_to "Delete #{school.name}", "/schools/#{school.id}", method: :delete %></h3>
<% end %>
<br>
 <h2><a href="/schools/new">New School</a></h2>
 <h3><%= form_with url: "/schools", method: "get", local: true do |form| %>
  <%= form.label :keyword, "Type the name of the school you want to search for" %>
  <%= form.search_field :keyword %> 
  <br>
  <%= form.submit "Search" %>
<% end %></h3>