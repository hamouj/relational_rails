<%= form_with url: '/schools', method: :post, local: true do |form| %>
  <br>
  <%= form.label :name, "School name:" %>
  <%= form.text_field :name %>
  <br>
  <br>
  <%= form.label :open_year, "Year it opened:" %>
  <%= form.number_field :open_year, within: 1000...9999 %>
  <br>
  <br>
  <%= form.label :fully_staffed, "Are they fully staffed?" %>
  <%= form.radio_button :fully_staffed, "true" %>
  <%= form.label :fully_staffed_true, "True" %>
  <%= form.radio_button :fully_staffed, "false" %> 
  <%= form.label :fully_staffed_false, "False" %>
  <br>
  <br>
  <%= form.submit "Create School" %>
<% end %>


